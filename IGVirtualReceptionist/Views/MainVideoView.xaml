<v:ViewBase x:Class="IGVirtualReceptionist.Views.MainVideoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:v="clr-namespace:IGVirtualReceptionist.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1600">
    <Grid>
        <Button Click="Button_Click">
            <MediaElement Name="mePromoVideo" MediaEnded="mePromoVideo_MediaEnded" Loaded="mePromoVideo_Loaded" Source="Resources/Videos/BigPromo4.wmv" LoadedBehavior="Manual" Stretch="Uniform" MediaFailed="mePromoVideo_MediaFailed">

                <MediaElement.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="4.58" ScaleY="3" />
                    </TransformGroup>
                </MediaElement.LayoutTransform>
            </MediaElement>
        </Button>
    </Grid>
</v:ViewBase>
